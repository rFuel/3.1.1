      OPEN "CLIENT" TO CLIENT ELSE STOP
      OPTION = 2
      IF OPTION = 1 THEN GO UNDO..CHANGES
      IF OPTION = 2 THEN GO MAKE..CHANGES
      STOP
*
UNDO..CHANGES:
      EXECUTE "SELECT CLIENT WITH F1 LIKE NEW..."
      LOOP
         READNEXT ID ELSE EXIT
         READ REC FROM CLIENT, ID ELSE CONTINUE
         REC<1> = EREPLACE(REC<1>, "NEW", "")
         WRITE REC ON CLIENT, ID
      REPEAT
      CRT "Done."
      STOP
*
MAKE..CHANGES:
      EXECUTE "SELECT CLIENT SAMPLE 250"
      LOOP
         READNEXT ID ELSE EXIT
         READ REC FROM CLIENT, ID ELSE CONTINUE
         REC<1> = "NEW":REC<1>
         WRITE REC ON CLIENT, ID
      REPEAT
      CRT "Done."
      STOP
   END
